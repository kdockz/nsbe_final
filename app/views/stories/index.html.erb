<h1>Listing stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Post date</th>
    <th>Post time</th>
    <th>Publisher</th>
    <th>Content</th>
  </tr>

<% @stories.each do |story| %>
<tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%=h story.title %></td>
    <td><%=h story.post_date %></td>
    <td><%=h story.post_time %></td>
    <td><%=h story.publisher %></td>
    <td><%=h story.content %></td>
    <td><%= link_to 'Show', story %></td>
    <td><%= link_to (image_tag("edit.gif")), edit_story_path(story) %></td>
    <td><%= link_to (image_tag("delete.gif")), story, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New story', new_story_path %>