<h1>Listing events</h1>

<table>
  <tr>
    <th>Event date</th>
    <th>Event time</th>
    <th>Location</th>
    <th>Description</th>
  </tr>

<% @events.each do |event| %>
<tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%=h event.event_date %></td>
    <td><%=h event.event_time %></td>
    <td><%=h event.location %></td>
    <td><%=h event.description %></td>
    <td><%= link_to (image_tag("refresh.gif")), event %></td>
    <td><%= link_to (image_tag("edit.gif")), edit_event_path(event) %></td>
    <td><%= link_to (image_tag("delete.gif")), event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

